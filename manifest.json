{
  "manifest_version": 3,
  "name": "Where's that from?",
  "version": "1.3",

  "description": "Shows more info about Amazon sellers and brands",

  "icons": {
    "48": "icons/globe-48.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.amazon.com/*"],
      "js": ["amazon.js"]
    }
  ],
  
  "options_ui": {
    "page": "options.html"
  },
  
  "permissions": [
    "storage", 
    "webRequest"
  ],
  
  "browser_specific_settings": {
    "gecko": {
	  "id": "plugin@wheresthatfrom.org"
    }
  }
}
